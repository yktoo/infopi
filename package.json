{
    "name": "infopi",
    "version": "2.12.0",
    "main": "bootstrap.js",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --configuration development",
        "build:prod": "ng build --base-href ./",
        "test": "ng test",
        "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessNoSandbox",
        "lint": "ng lint",
        "electron": "ng build --base-href ./ && electron --no-sandbox .",
        "package": "npm run build:prod && node package.js",
        "package:rpi": "npm run build:prod && node package.js rpi",
        "deploy": "npm run package:rpi && scp dist/installers/infopi_*_arm64.deb infopi: && ssh infopi sudo dpkg -i infopi_*_arm64.deb && ssh infopi rm infopi_*_arm64.deb && npm run restart-infopi",
        "restart-infopi": "ssh infopi killall infopi; ssh infopi 'env DISPLAY=:0 nohup infopi &>/dev/null &'"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^19.1.4",
        "@angular/cdk": "^19.1.2",
        "@angular/common": "^19.1.4",
        "@angular/core": "^19.1.4",
        "@angular/platform-browser": "^19.1.4",
        "@angular/platform-browser-dynamic": "^19.1.4",
        "@angular/forms": "^19.1.4",
        "chart.js": "^4.4.7",
        "ng2-charts": "^8.0.0",
        "rxjs": "^7.8.1",
        "stream": "^0.0.3",
        "tslib": "^2.8.1",
        "weather-icons": "github:erikflowers/weather-icons",
        "xml-js": "^1.6.11",
        "zone.js": "^0.15.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^19.1.5",
        "@angular-eslint/builder": "^19.0.2",
        "@angular-eslint/eslint-plugin": "^19.0.2",
        "@angular-eslint/eslint-plugin-template": "^19.0.2",
        "@angular-eslint/schematics": "^19.0.2",
        "@angular-eslint/template-parser": "^19.0.2",
        "@angular/cli": "^19.1.5",
        "@angular/compiler": "^19.1.4",
        "@angular/compiler-cli": "^19.1.4",
        "@angular/language-service": "^19.1.4",
        "@types/jasmine": "^5.1.5",
        "@types/node": "^22.13.1",
        "@typescript-eslint/eslint-plugin": "^8.23.0",
        "@typescript-eslint/parser": "^8.23.0",
        "codelyzer": "^6.0.2",
        "electron": "^29.4.2",
        "electron-installer-debian": "^3.2.0",
        "electron-packager": "^17.1.2",
        "eslint": "^8.57.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsdoc": "^50.6.3",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "jasmine-core": "^5.5.0",
        "jasmine-reporters": "^2.5.2",
        "jasmine-spec-reporter": "^7.0.0",
        "karma": "^6.4.4",
        "karma-chrome-launcher": "^3.2.0",
        "karma-coverage": "^2.2.1",
        "karma-jasmine": "^5.1.0",
        "karma-jasmine-html-reporter": "^2.1.0",
        "ng-mocks": "^14.13.2",
        "typescript": "~5.7.3"
    },
    "author": {
        "name": "Dmitry Kann",
        "email": "yktooo@gmail.com",
        "url": "https://yktoo.com/"
    },
    "description": "Single page info kiosk application",
    "directories": {
        "doc": "doc"
    },
    "keywords": [
        "InfoPi",
        "kiosk",
        "Angular",
        "Electron",
        "clock",
        "weather",
        "timetables",
        "Buienradar"
    ],
    "license": "MIT"
}
