{
    "name": "infopi",
    "version": "2.6.0",
    "main": "bootstrap.js",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --configuration development",
        "build:prod": "ng build --base-href ./",
        "test": "ng test",
        "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessNoSandbox",
        "lint": "ng lint",
        "electron": "ng build --base-href ./ && electron .",
        "package": "npm run build:prod && node package.js",
        "package:rpi": "npm run build:prod && node package.js rpi",
        "deploy": "npm run package:rpi && scp dist/installers/infopi_*_armhf.deb yrpi: && ssh yrpi sudo dpkg -i infopi_*_armhf.deb && ssh yrpi rm infopi_*_armhf.deb && ssh yrpi sudo reboot"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^14.1.0",
        "@angular/common": "^14.1.0",
        "@angular/compiler": "^14.1.0",
        "@angular/core": "^14.1.0",
        "@angular/forms": "^14.1.0",
        "@angular/platform-browser": "^14.1.0",
        "@angular/platform-browser-dynamic": "^14.1.0",
        "@angular/router": "^14.1.0",
        "chart.js": "^3.8.2",
        "ng2-charts": "^3.1.2",
        "rxjs": "^7.5.6",
        "stream": "^0.0.2",
        "timers": "^0.1.1",
        "tslib": "^2.4.0",
        "weather-icons": "github:erikflowers/weather-icons",
        "xml2js": "^0.4.23",
        "zone.js": "^0.11.7"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^14.1.0",
        "@angular-eslint/builder": "^14.0.2",
        "@angular-eslint/eslint-plugin": "^14.0.2",
        "@angular-eslint/eslint-plugin-template": "^14.0.2",
        "@angular-eslint/schematics": "^14.0.2",
        "@angular-eslint/template-parser": "^14.0.2",
        "@angular/cli": "^14.1.0",
        "@angular/compiler-cli": "^14.1.0",
        "@angular/language-service": "^14.1.0",
        "@types/jasmine": "^4.0.3",
        "@types/jasminewd2": "^2.0.10",
        "@types/node": "^18.6.3",
        "@types/xml2js": "^0.4.11",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "codelyzer": "^6.0.2",
        "electron": "^19.0.10",
        "electron-installer-debian": "^3.1.0",
        "electron-packager": "^15.5.1",
        "eslint": "^8.21.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^39.3.4",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "jasmine-core": "^4.3.0",
        "jasmine-spec-reporter": "^7.0.0",
        "karma": "^6.4.0",
        "karma-chrome-launcher": "^3.1.1",
        "karma-coverage": "^2.2.0",
        "karma-jasmine": "^5.1.0",
        "karma-jasmine-html-reporter": "^2.0.0",
        "ng-mocks": "^14.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "author": {
        "name": "Dmitry Kann",
        "email": "yktooo@gmail.com",
