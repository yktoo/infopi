{
    "name": "infopi",
    "version": "2.7.0",
    "main": "bootstrap.js",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --configuration development",
        "build:prod": "ng build --base-href ./",
        "test": "ng test",
        "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessNoSandbox",
        "lint": "ng lint",
        "electron": "ng build --base-href ./ && electron .",
        "package": "npm run build:prod && node package.js",
        "package:rpi": "npm run build:prod && node package.js rpi",
        "deploy": "npm run package:rpi && scp dist/installers/infopi_*_armhf.deb yrpi: && ssh yrpi sudo dpkg -i infopi_*_armhf.deb && ssh yrpi rm infopi_*_armhf.deb && ssh yrpi sudo reboot"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^15.0.3",
        "@angular/common": "^15.0.3",
        "@angular/core": "^15.0.3",
        "@angular/platform-browser": "^15.0.3",
        "@angular/platform-browser-dynamic": "^15.0.3",
        "chart.js": "^4.0.1",
        "ng2-charts": "^4.1.1",
        "rxjs": "^7.6.0",
        "stream": "^0.0.2",
        "tslib": "^2.4.1",
        "weather-icons": "github:erikflowers/weather-icons",
        "xml-js": "^1.6.11",
        "zone.js": "^0.12.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^15.0.3",
        "@angular-eslint/builder": "^15.1.0",
        "@angular-eslint/eslint-plugin": "^15.1.0",
        "@angular-eslint/eslint-plugin-template": "^15.1.0",
        "@angular-eslint/schematics": "^15.1.0",
        "@angular-eslint/template-parser": "^15.1.0",
        "@angular/cli": "^15.0.3",
        "@angular/compiler": "^15.0.3",
        "@angular/compiler-cli": "^15.0.3",
        "@angular/language-service": "^15.0.3",
        "@types/jasmine": "^4.3.1",
        "@types/node": "^18.11.14",
        "@typescript-eslint/eslint-plugin": "^5.46.1",
        "@typescript-eslint/parser": "^5.46.1",
        "codelyzer": "^6.0.2",
        "electron": "^22.0.0",
        "electron-installer-debian": "^3.1.0",
        "electron-packager": "^17.1.1",
        "eslint": "^8.29.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^39.6.4",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "jasmine-core": "^4.5.0",
        "jasmine-reporters": "^2.5.2",
        "jasmine-spec-reporter": "^7.0.0",
        "karma": "^6.4.1",
        "karma-chrome-launcher": "^3.1.1",
        "karma-coverage": "^2.2.0",
        "karma-jasmine": "^5.1.0",
        "karma-jasmine-html-reporter": "^2.0.0",
        "ng-mocks": "^14.5.0",
        "typescript": "^4.8.4"
    },
    "author": {
        "name": "Dmitry Kann",
        "email": "yktooo@gmail.com",
        "url": "https://yktoo.com/"
    },
    "description": "Single page info kiosk application",
    "directories": {
        "doc": "doc"
    },
    "keywords": [],
    "license": "MIT"
}
