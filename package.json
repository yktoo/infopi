{
    "name": "infopi",
    "version": "2.11.0",
    "main": "bootstrap.js",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --configuration development",
        "build:prod": "ng build --base-href ./",
        "test": "ng test",
        "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessNoSandbox",
        "lint": "ng lint",
        "electron": "ng build --base-href ./ && electron --no-sandbox .",
        "package": "npm run build:prod && node package.js",
        "package:rpi": "npm run build:prod && node package.js rpi",
        "deploy": "npm run package:rpi && scp dist/installers/infopi_*_armhf.deb yrpi: && ssh yrpi sudo dpkg -i infopi_*_armhf.deb && ssh yrpi rm infopi_*_armhf.deb && npm run restart-infopi",
        "restart-infopi": "ssh yrpi killall infopi; ssh yrpi 'env DISPLAY=:0 nohup infopi &>/dev/null &'"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^17.3.11",
        "@angular/cdk": "^17.3.10",
        "@angular/common": "^17.3.11",
        "@angular/core": "^17.3.11",
        "@angular/platform-browser": "^17.3.11",
        "@angular/platform-browser-dynamic": "^17.3.11",
        "@angular/forms": "^17.3.11",
        "chart.js": "^4.4.3",
        "ng2-charts": "^5.0.4",
        "rxjs": "^7.8.1",
        "stream": "^0.0.2",
        "tslib": "^2.6.3",
        "weather-icons": "github:erikflowers/weather-icons",
        "xml-js": "^1.6.11",
        "zone.js": "^0.14.7"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^17.3.8",
        "@angular-eslint/builder": "^17.5.2",
        "@angular-eslint/eslint-plugin": "^17.5.2",
        "@angular-eslint/eslint-plugin-template": "^17.5.2",
        "@angular-eslint/schematics": "^17.5.2",
        "@angular-eslint/template-parser": "^17.5.2",
        "@angular/cli": "^17.3.8",
        "@angular/compiler": "^17.3.11",
        "@angular/compiler-cli": "^17.3.11",
        "@angular/language-service": "^17.3.11",
        "@types/jasmine": "^5.1.4",
        "@types/node": "^20.14.2",
        "@typescript-eslint/eslint-plugin": "^7.13.0",
        "@typescript-eslint/parser": "^7.13.0",
        "codelyzer": "^6.0.2",
        "electron": "^29.4.2",
        "electron-installer-debian": "^3.2.0",
        "electron-packager": "^17.1.2",
        "eslint": "^8.57.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsdoc": "^48.2.9",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "jasmine-core": "^5.1.2",
        "jasmine-reporters": "^2.5.2",
        "jasmine-spec-reporter": "^7.0.0",
        "karma": "^6.4.3",
        "karma-chrome-launcher": "^3.2.0",
        "karma-coverage": "^2.2.1",
        "karma-jasmine": "^5.1.0",
        "karma-jasmine-html-reporter": "^2.1.0",
        "ng-mocks": "^14.13.0",
        "typescript": "~5.3.3"
    },
    "author": {
        "name": "Dmitry Kann",
        "email": "yktooo@gmail.com",
        "url": "https://yktoo.com/"
    },
    "description": "Single page info kiosk application",
    "directories": {
        "doc": "doc"
    },
    "keywords": [
        "InfoPi",
        "kiosk",
        "Angular",
        "Electron",
        "clock",
        "weather",
        "timetables",
        "Buienradar"
    ],
    "license": "MIT"
}
