{
    "name": "infopi",
    "version": "2.7.0",
    "main": "bootstrap.js",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --configuration development",
        "build:prod": "ng build --base-href ./",
        "test": "ng test",
        "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessNoSandbox",
        "lint": "ng lint",
        "electron": "ng build --base-href ./ && electron .",
        "package": "npm run build:prod && node package.js",
        "package:rpi": "npm run build:prod && node package.js rpi",
        "deploy": "npm run package:rpi && scp dist/installers/infopi_*_armhf.deb yrpi: && ssh yrpi sudo dpkg -i infopi_*_armhf.deb && ssh yrpi rm infopi_*_armhf.deb && ssh yrpi sudo reboot"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^16.1.7",
        "@angular/common": "^16.1.7",
        "@angular/core": "^16.1.7",
        "@angular/platform-browser": "^16.1.7",
        "@angular/platform-browser-dynamic": "^16.1.7",
        "chart.js": "^4.3.2",
        "ng2-charts": "^4.1.1",
        "rxjs": "^7.8.1",
        "stream": "^0.0.2",
        "tslib": "^2.6.1",
        "weather-icons": "github:erikflowers/weather-icons",
        "xml-js": "^1.6.11",
        "zone.js": "^0.13.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^16.1.6",
        "@angular-eslint/builder": "^16.1.0",
        "@angular-eslint/eslint-plugin": "^16.1.0",
        "@angular-eslint/eslint-plugin-template": "^16.1.0",
        "@angular-eslint/schematics": "^16.1.0",
        "@angular-eslint/template-parser": "^16.1.0",
        "@angular/cli": "^16.1.6",
        "@angular/compiler": "^16.1.7",
        "@angular/compiler-cli": "^16.1.7",
        "@angular/language-service": "^16.1.7",
        "@types/jasmine": "^4.3.5",
        "@types/node": "^18.17.1",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "@typescript-eslint/parser": "^6.2.1",
        "codelyzer": "^6.0.2",
        "electron": "^25.3.2",
        "electron-installer-debian": "^3.1.0",
        "electron-packager": "^17.1.1",
        "eslint": "^8.46.0",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-jsdoc": "^46.4.5",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "jasmine-core": "^5.1.0",
        "jasmine-reporters": "^2.5.2",
        "jasmine-spec-reporter": "^7.0.0",
        "karma": "^6.4.2",
        "karma-chrome-launcher": "^3.2.0",
        "karma-coverage": "^2.2.1",
        "karma-jasmine": "^5.1.0",
        "karma-jasmine-html-reporter": "^2.1.0",
        "ng-mocks": "^14.11.0",
        "typescript": "~5.1.6"
    },
    "author": {
        "name": "Dmitry Kann",
        "email": "yktooo@gmail.com",
        "url": "https://yktoo.com/"
    },
    "description": "Single page info kiosk application",
    "directories": {
        "doc": "doc"
    },
    "keywords": [
        "InfoPi",
        "kiosk",
        "Angular",
        "Electron",
        "clock",
        "weather",
        "timetables",
        "Buienradar"
    ],
    "license": "MIT"
}
