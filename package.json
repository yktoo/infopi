{
    "name": "infopi",
    "version": "2.5.2",
    "main": "bootstrap.js",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --configuration development",
        "build:prod": "ng build --base-href ./",
        "test": "ng test",
        "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessNoSandbox",
        "lint": "ng lint",
        "electron": "ng build --base-href ./ && electron .",
        "package": "npm run build:prod && node package.js",
        "package:rpi": "npm run build:prod && node package.js rpi",
        "deploy": "npm run package:rpi && scp dist/installers/infopi_*_armhf.deb yrpi: && ssh yrpi sudo dpkg -i infopi_*_armhf.deb && ssh yrpi rm infopi_*_armhf.deb && ssh yrpi sudo reboot"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^13.2.2",
        "@angular/common": "^13.2.2",
        "@angular/compiler": "^13.2.2",
        "@angular/core": "^13.2.2",
        "@angular/forms": "^13.2.2",
        "@angular/platform-browser": "^13.2.2",
        "@angular/platform-browser-dynamic": "^13.2.2",
        "@angular/router": "^13.2.2",
        "chart.js": "^3.7.0",
        "ng2-charts": "^3.0.8",
        "rxjs": "^7.5.3",
        "stream": "^0.0.2",
        "timers": "^0.1.1",
        "tslib": "^2.3.1",
        "weather-icons": "github:erikflowers/weather-icons",
        "xml2js": "^0.4.23",
        "zone.js": "^0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^13.2.2",
        "@angular-eslint/builder": "^13.0.1",
        "@angular-eslint/eslint-plugin": "^13.0.1",
        "@angular-eslint/eslint-plugin-template": "^13.0.1",
        "@angular-eslint/schematics": "^13.0.1",
        "@angular-eslint/template-parser": "^13.0.1",
        "@angular/cli": "^13.2.2",
        "@angular/compiler-cli": "^13.2.2",
        "@angular/language-service": "^13.2.2",
        "@types/jasmine": "^3.10.3",
        "@types/jasminewd2": "^2.0.10",
        "@types/node": "^16.11.22",
        "@types/xml2js": "^0.4.9",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "codelyzer": "^6.0.2",
        "electron": "^17.0.0",
        "electron-installer-debian": "^3.1.0",
        "electron-packager": "^15.4.0",
        "eslint": "^8.8.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsdoc": "^37.8.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "jasmine-core": "^4.0.0",
        "jasmine-spec-reporter": "^7.0.0",
        "karma": "^6.3.16",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage": "^2.1.1",
        "karma-jasmine": "^4.0.1",
        "karma-jasmine-html-reporter": "^1.7.0",
        "ng-mocks": "^13.0.2",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    },
    "author": {
        "name": "Dmitry Kann",
